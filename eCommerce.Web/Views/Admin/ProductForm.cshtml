@model eCommerce.Model.Product
@{
    ViewBag.Title = "Product Form";
}

<h2>Product Form</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(e => e.Description)
        @Html.TextBoxFor(e => e.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.Price)
        @Html.TextBoxFor(e => e.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(e => e.Price)
    </div>

    <div class="form-group">
        @Html.LabelFor(e => e.CostPrice)
        @Html.TextBoxFor(e => e.CostPrice, new {@class = "form-control" })
        @Html.ValidationMessageFor(e => e.CostPrice) 
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}
